{
  "workbench.editor.showTabs": false,

  "editor.lineNumbers": "relative",
  "editor.fontSize": 15,
  "editor.tabCompletion": "on",
  "editor.minimap.enabled": false,
  "editor.bracketPairColorization.enabled": false,

  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    "**/.git": false
  },

  "[json]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },
  "[cpp]": {
    "editor.wordWrap": "off"
  },

  "rust-analyzer.lens.enable": false,
  "rust-analyzer.inlayHints.enable": false,

  "C_Cpp.dimInactiveRegions": false,

  "security.workspace.trust.untrustedFiles": "open",

  "cmake.configureOnOpen": false,

  // vim settings
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.leader": ",",
  "vim.insertModeKeyBindings": [
    {
      "before": [
        "j",
        "k"
      ],
      "after": [
        "<Esc>"
      ]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "<C-k>"
      ],
      "after": [
        "5",
        "k"
      ]
    },
    {
      "before": [
        "<C-j>"
      ],
      "after": [
        "5",
        "j"
      ]
    },
    {
      "before": [
        "<leader>",
        "q"
      ],
      "commands": [
        "workbench.action.closeEditorsInGroup"
      ]
    },
    {
      "before": [
        "<leader>",
        "s"
      ],
      "commands": [
        "workbench.action.splitEditorDown",
        "search.action.openEditor"
      ]
    },
    {
      "before": [
        "<leader>",
        "h"
      ],
      "commands": [
        "rust-analyzer.toggleInlayHints"
      ],
      "when": "inRustProject"
    },
    {
      "before": [
        "<leader>",
        "o",
        "f"
      ],
      "commands": [
        "C_Cpp.SwitchHeaderSource"
      ],
      "when": "editorTextFocus && editorLangId == 'c' || editorTextFocus && editorLangId == 'cpp' || editorTextFocus && editorLangId == 'cuda-cpp'"
    }
  ],
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false,
    "<C-c>": false,
    "<C-v>": false,
    // VSCode default keybindings to toggle sidebar visibility
    "<C-b>": false,
    // VSCode default keybindings for searching symbols
    "<C-t>": false
  }
}
