{
  "workbench.editor.showTabs": "single",
  "workbench.activityBar.location": "top",

  "editor.lineNumbers": "relative",
  "editor.fontSize": 15,
  "editor.tabCompletion": "on",
  "editor.minimap.enabled": false,
  "editor.bracketPairColorization.enabled": false,
  // "editor.inlayHints.enabled": false,

  "files.trimTrailingWhitespace": false,
  "files.exclude": {
    "**/.git": false
  },

  "[json]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.wordWrap": "on"
  },
  "[cpp]": {
    "editor.wordWrap": "off"
  },
  "[python]": {
    "editor.formatOnType": true
  },

  "rust-analyzer.lens.enable": false,

  "C_Cpp.dimInactiveRegions": true,
  "C_Cpp.default.cppStandard": "c++20",

  "security.workspace.trust.untrustedFiles": "open",
  "security.allowedUNCHosts": [
    "wsl.localhost"
  ],

  "cmake.configureOnOpen": false,

  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.scrollback": 50000,

  "remote.SSH.remotePlatform": {
    "DESKTOP-N9CIN42.amd.com": "windows"
  },

  // vim settings
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.leader": ",",
  "vim.insertModeKeyBindings": [
    {
      "before": [
        "j",
        "k"
      ],
      "after": [
        "<Esc>"
      ]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "<C-k>"
      ],
      "after": [
        "5",
        "k"
      ]
    },
    {
      "before": [
        "<C-j>"
      ],
      "after": [
        "5",
        "j"
      ]
    },
    {
      "before": [
        "<leader>",
        "q"
      ],
      "commands": [
        "workbench.action.closeEditorsInGroup"
      ]
    },
    {
      "before": [
        "<leader>",
        "s"
      ],
      "commands": [
        "workbench.action.splitEditorDown",
        "search.action.openEditor"
      ]
    },
    {
      "before": [
        "<leader>",
        "h"
      ],
      "commands": [
        "rust-analyzer.toggleInlayHints"
      ],
      "when": "inRustProject"
    },
    {
      "before": [
        "<leader>",
        "o",
        "f"
      ],
      "commands": [
        "C_Cpp.SwitchHeaderSource"
      ],
      "when": "editorTextFocus && editorLangId == 'c' || editorTextFocus && editorLangId == 'cpp' || editorTextFocus && editorLangId == 'cuda-cpp'"
    },
    {
      "before": [
        "<leader>",
        "d",
        "b"
      ],
      "commands": [
        "workbench.action.closeEditorsInGroup",
        "workbench.action.terminal.toggleTerminal"
      ],
      "when": "editorTextFocus"
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [

  ],
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false,
    "<C-c>": false,
    "<C-v>": false,
    // VSCode default keybindings to toggle sidebar visibility
    "<C-b>": false,
    // VSCode default keybindings for searching symbols
    "<C-t>": false
  },

  // neovim
  "vscode-neovim.highlightGroups.highlights": {
    "Directory": "vim",
    "IncSearch": {
      "backgroundColor": "theme.editor.findMatchBackground",
      "borderColor": "theme.editor.findMatchBorder"
    },
    "Search": {
      "backgroundColor": "theme.editor.findMatchHighlightBackground",
      "borderColor": "theme.editor.findMatchHighlightBorder"
    },
    "Visual": {
      "backgroundColor": "theme.editor.selectionBackground"
    },
    "Conceal": "vim",
    "Substitute": "vim"
  },
  "vscode-neovim.neovimExecutablePaths.win32": "C:\\Program Files\\Neovim\\bin\\nvim.exe",
  "vscode-neovim.neovimInitVimPaths.win32": "$HOME\\init.vim",

  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },

  "git.openRepositoryInParentFolders": "never"
}
